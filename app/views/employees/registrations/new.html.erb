<div class="register">
<h3 class="text-center text-info">Complete Your Registration</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-signin") do |f| %>
  <%= devise_error_messages! %>


<hr class="colorgraph">
<fieldset>
 
    <div class="field ">
      <%= f.label :first_name%> 
      <%= f.text_field :first_name, class: 'form-control'%>
    </div>

    <div class="field">
      <%= f.label :last_name%>:
      <%= f.text_field :last_name, class: 'form-control'%>
    </div>
    
    <div class="field">
      <label > Gender :</label>
      <br>
      <div class="male-or-female">
      <%= f.radio_button :gender , 'male', :checked => true%>
      <%= label :gender, 'Male'%>
      <%= f.radio_button :gender , 'female'%>
      <%= label :gender, 'Female'%>
      </div>
    </div>

    <div class="field">
      <%= f.label :birth_date%>:
      <%= f.date_select :birth_date, :start_year => 1950 , :order => [:day, :month, :year], class: 'form-control'%>
    </div>
    
    <div class="field">
      <label> <%= :blood_group%></label>:
      <%= f.select :blood_group, [ ['Blood_group',''] ,['A+','a+'], ['A-','a-'], ['B+','b+'],['B-','b-'], ['AB+','ab+'],['AB-','ab-'], ['O+','o+'],['O-','o-']]%>
    </div>
    
    <div class="field">
      <%= f.label :contact %>  :
      <%= f.text_field :contact_no, class: 'form-control'%>
    </div>
    
    <div class="field">
      <%= f.label :qualification%>:
      <%= f.text_field :qualification, class: 'form-control'%>
    </div>

    <div class="field">
      <%= f.label :joinning_date%>:
      <%= f.date_select :joining_date, :start_year => 2015, :order => [:day, :month, :year], class: 'form-control'%>
    </div>
    
    <div class="field">
      <%= f.label :department%>:
      <%= f.text_field :department, class: 'form-control'%>
    </div>

    <div class="field">
      <%= f.label :email %>:
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      <% if @minimum_password_length %>
          <em> minimum 8 characters are recquired </em>
      <%end%>    
    </div>

    <div class="field">
      <label> Confirm Password: </label>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>
</fieldset>
  <div class="actions">
    <%= f.submit 'Submit', :class => 'btn btn-success  btn-lg btn-block' %>
  </div>
  
<% end %>

<%= render "employees/shared/links" %>

</div>
